{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "GOreITshniki",
    "description": "Api"
  },
  "servers": [
    {
      "url": "https://backend-project-dl3a.onrender.com/api",
      "description": "API base URL"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "Authorization endpoints"
    },
    {
      "name": "Product"
    },
    {
      "name": "Exercise"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "tags": ["User"],
        "summary": "User registration",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "email": "user@example.com",
                "name": "Gore Itshnik",
                "password": "qwerty123"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "example": {
                  "email": "user@example.com",
                  "name": "Gore Itshnik",
                  "token": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)"
          },
          "409": {
            "description": "Email already in use"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["User"],
        "summary": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "example": {
                  "token": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)"
          },
          "401": {
            "description": "Email or password invalid"
          },
          "409": {
            "description": "Email already in use"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/users/current": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["User"],
        "summary": "Get current user",
        "responses": {
          "201": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Bad request (invalid request body)"
          },
          "401": {
            "description": "Email or password invalid"
          },
          "409": {
            "description": "Email already in use"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/users/update": {
      "patch": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["User"],
        "summary": "Update user information",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "height": {
                    "type": "number"
                  },
                  "currentWeight": {
                    "type": "number"
                  },
                  "desiredWeight": {
                    "type": "number"
                  },
                  "birthday": {
                    "type": "string",
                    "format": "date"
                  },
                  "sex": {
                    "type": "string"
                  },
                  "blood": {
                    "type": "number"
                  },
                  "levelActivity": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update success"
          }
        }
      }
    },
    "/users/avatar": {
      "post": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["User"],
        "summary": "Update user avatar",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatarURL": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "401": {
            "description": "Not authorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/users/logout": {
      "post": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["User"],
        "summary": "User logout",
        "responses": {
          "204": {
            "description": "Logout success"
          }
        }
      }
    },
    "/products": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["Product"],
        "summary": "Get products",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Keyword",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Category",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "recommendation",
            "in": "query",
            "description": "Type",
            "schema": {
              "type": "string",
              "enum": ["all", "recommended", "not recommended"],
              "default": "all"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page",
            "schema": {
              "type": "string",
              "default": "1"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limit per page",
            "schema": {
              "type": "string",
              "default": "10"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Not authorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/products/categories": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["Product"],
        "summary": "Get product categories",
        "responses": {
          "200": {
            "description": "Product categories found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductCategory"
                }
              }
            }
          },
          "401": {
            "description": "Not authorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/exercises/": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["Filter"],
        "summary": "Get all exercises or by type",
        "parameters": [
          {
            "name": "type",
            "required": false,
            "in": "query",
            "description": "Type of exercises",
            "schema": {
              "type": "string",
              "enum": ["body parts", "muscles", "equipment"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Exercise"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Not authorized"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/exercises/{type}/{name}": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["Filter"],
        "summary": "Get exercises by names",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "description": "Type of exercises",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["body parts", "muscles", "equipment"]
            }
          },
          {
            "name": "name",
            "in": "path",
            "description": "Name of the exercises",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "filter": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "imgURL": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "filter": "Body parts",
                  "name": "lower legs",
                  "imgURL": "string"
                }
              }
            }
          },
          "401": {
            "description": "Not authorized"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },

    "/diary/exercise/{id}": {
      "patch": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["Diary"],
        "summary": "Add or update exercise in the diary",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the exercise",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "time": {
                    "type": "number",
                    "required": true
                  },
                  "date": {
                    "type": "string",
                    "example": "23.01.2024"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successful"
          },
          "201": {
            "description": "Exercise added successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Exercise not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Delete exercise from diary",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the exercise",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "date",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": ["Diary"],
        "responses": {
          "200": {
            "description": "Exercise deleted successfully"
          },
          "400": {
            "description": "Item not found on the specified date"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/diary/product/{id}": {
      "patch": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "tags": ["Diary"],
        "summary": "Add or update product in the diary",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the product",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "weight": {
                    "type": "number",
                    "required": true
                  },
                  "date": {
                    "type": "string",
                    "example": "23.01.2024"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successful"
          },
          "201": {
            "description": "Product added successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Product not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Delete product from diary",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the product",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "date",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": ["Diary"],
        "responses": {
          "200": {
            "description": "Product deleted successfully"
          },
          "400": {
            "description": "Item not found on the specified date"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/diary/day": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Get diary information for a specific date",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "description": "Date in string format",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": ["Diary"],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Diary"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["email", "name", "password"],
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "minLength": 6
          },
          "token": {
            "type": "string",
            "default": null
          },
          "avatarURL": {
            "type": "string",
            "minimum": 150,
            "default": ""
          },
          "height": {
            "type": "number",
            "default": null
          },
          "currentWeight": {
            "type": "number",
            "default": null,
            "minimum": 35
          },
          "desiredWeight": {
            "type": "number",
            "default": null,
            "minimum": 35
          },
          "birthday": {
            "type": "string",
            "default": null,
            "format": "date",
            "example": "2006-01-01"
          },
          "blood": {
            "type": "number",
            "enum": [1, 2, 3, 4]
          },
          "sex": {
            "type": "string",
            "enum": ["male", "female"]
          },
          "levelActivity": {
            "type": "number",
            "enum": [1, 2, 3, 4, 5]
          },
          "calories": {
            "type": "number",
            "default": 0
          }
        }
      },
      "UserProduct": {
        "type": "object",
        "required": ["product", "weight", "consumedCalories"],
        "properties": {
          "product": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          },
          "weight": {
            "type": "number",
            "description": "Weight of the consumed product in grams"
          },
          "consumedCalories": {
            "type": "number",
            "description": "Consumed calories from the product"
          }
        }
      },
      "UserExercise": {
        "type": "object",
        "required": ["exercise", "time", "burnedCalories"],
        "properties": {
          "exercise": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Exercise"
            }
          },
          "time": {
            "type": "number",
            "description": "Time spent on exercise in minutes"
          },
          "burnedCalories": {
            "type": "number",
            "description": "Burned calories during exercise"
          }
        }
      },
      "Exercise": {
        "type": "object",
        "properties": {
          "bodypart": {
            "type": "string"
          },
          "equipment": {
            "type": "string"
          },
          "gifUrl": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "burnedCalories": {
            "type": "number"
          },
          "time": {
            "type": "number"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "weight": {
            "type": "number"
          },
          "calories": {
            "type": "number"
          },
          "category": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "groupBloodNotAllowed": {
            "type": "object",
            "properties": {
              "1": {
                "type": "boolean"
              },
              "2": {
                "type": "boolean"
              },
              "3": {
                "type": "boolean"
              },
              "4": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "ProductCategory": {
        "required": ["category"],
        "type": "object",
        "properties": {
          "category": {
            "type": "string"
          }
        }
      },
      "Filter": {
        "type": "object",
        "properties": {
          "filter": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "imgURL": {
            "type": "string"
          }
        }
      },
      "Diary": {
        "type": "object",
        "required": ["owner"],
        "properties": {
          "owner": {
            "type": "string",
            "description": "User_ID"
          },
          "days": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Day"
            },
            "description": "List of days in the diary"
          }
        }
      },
      "Day": {
        "type": "object",
        "required": ["date"],
        "properties": {
          "date": {
            "type": "string"
          },
          "exercises": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserExercise"
            },
            "description": "List of exercises for the day"
          },
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserProduct"
            },
            "description": "List of consumed products for the day"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
